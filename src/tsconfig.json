{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "allowSyntheticDefaultImports": false,
    "moduleResolution": "Node",
    "noImplicitAny": false,
    "sourceMap": true,
    "outDir": "../dist/es2015",
    "declaration": true,
    "noEmitOnError": true,
    "removeComments": true,
    "experimentalDecorators": true
  },
  "files": [
    "./index.ts"
  ],
  "exclude": [
    "node_modules/rxjs"
  ]
}
